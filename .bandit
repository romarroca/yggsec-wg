[bandit]
# Bandit configuration for YggSec security project
# Only fail on medium and high severity issues

# Skip low severity issues that are acceptable in security projects
skips = B404,B110,B105,B603,B101,B602,B607

# Test for medium/high severity only  
severity = medium

# Exclude test files and development scripts if needed
exclude_dirs = tests,venv,.venv,build,dist